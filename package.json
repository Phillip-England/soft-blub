{
  "name": "bun_web_template",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch ./src/server/server.tsx",
    "bundle": "bun build ./src/client/client.ts --outdir ./public/js --watch",
    "tailwind": "npx tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build": "bun build ./src/client/client.ts --outdir ./public/js; npx tailwindcss -i ./public/css/input.css -o ./public/css/output.css",
    "prod": "bun run ./src/server/server.tsx"
  },
  "dependencies": {
    "@elysiajs/html": "^0.6.5",
    "@elysiajs/static": "^0.6.0",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "^1.0.3",
    "tailwindcss": "^3.3.3"
  },
  "module": "src/index.ts"
}
